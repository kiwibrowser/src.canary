<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingVertical="6dp"
    android:background="@drawable/rounded_rectangle_surface_0">

    <org.chromium.chrome.browser.bookmarks.ImprovedBookmarkFolderView
        android:id="@+id/folder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/start_image"
        android:layout_width="@dimen/improved_bookmark_start_image_size_visual"
        android:layout_height="@dimen/improved_bookmark_start_image_size_visual"
        android:scaleType="center"
        android:importantForAccessibility="no"
        android:background="@drawable/rounded_rectangle_surface_1" />

    <View
        android:layout_width="16dp"
        android:layout_height="match_parent" />

    <!-- Common title/description shared between list item views. -->
    <include layout="@layout/title_and_description_layout" />

    <include layout="@layout/improved_bookmark_row_end" />
</LinearLayout>